<UserControl x:Class="kurs.View.CurrentParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kurs.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Content="Текущие показатели" FontSize="16" Margin="15"/>
            <Label Content="Температура воздуха" HorizontalAlignment="Center"/>
            <Label Content="{Binding Temperature}" HorizontalAlignment="Center"/>
            <Label Content="Влажность воздуха" HorizontalAlignment="Center"/>
            <Label Content="{Binding Air_humidity}" HorizontalAlignment="Center"/>
            <Label Content="Влажность почвы" HorizontalAlignment="Center"/>
            <Label Content="{Binding Soil_Moisture}" HorizontalAlignment="Center"/>
            <Label Content="Освещенность" HorizontalAlignment="Center"/>
            <Label Content="{Binding Lightning}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
